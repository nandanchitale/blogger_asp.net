@using Helpers.ViewModels;
@model PostVM;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/Posts/CreatePost.css" />
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-sm-8">
        <form action="" method="post" class="form p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2 py-2">
                <label asp-for="@Model.Title" class="control-label">Blog Title</label>
                <input type="text" class="form-control" id="floatingInput" placeholder=""
                       asp-for="@Model.Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group my-2 py-2">
                <label asp-for="Content" class="control-label">Blog Content</label>
                <div class="quill_text_editor" id="editor"></div> <!-- Quill editor container -->
                <textarea hidden asp-for="Content" id="PostContent" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group my-2 py-2">
                <input type="submit" value="Create" class="btn btn-primary" asp-action="Create" asp-controller="Posts" asp-area="Posts" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script>
        var quill = new Quill('#editor', {
            theme: 'snow'
        });

        // Listen for form submission
        document.querySelector('form').onsubmit = function () {
            // Set the content of the hidden input field to the HTML content of the Quill editor
            document.querySelector('#PostContent').value = quill.root.innerHTML;
        };
    </script>
}
