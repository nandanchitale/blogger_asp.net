@model Helpers.ViewModels.PostVM

@{
    ViewData["Title"] = "Edit";
    Layout = "../Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/Posts/Post.css" />
}

<div class="container">
    <h1>Edit</h1>

    <h4>Post</h4>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <form action="@Url.Action("Edit", "Posts", new { area = "Posts" })" method="post" class="form p-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostId" value="@Model.PostId" />
                <div class="form-group my-2 py-2">
                    <label asp-for="Title" class="control-label">Blog Title</label>
                    <input type="text" class="form-control" name="Title" id="Title" placeholder="Enter blog title" asp-for="Title" value="@Model.Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group my-2 py-2">
                    <label asp-for="Content" class="control-label">Blog Content</label>
                    <div id="editor" class="quill_text_editor"></div>
                    <input type="hidden" id="Content" value="@Model.Content" name="Content" asp-for="Content" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group my-2 py-2">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="/">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script>
        var quill = new Quill('#editor', {
            theme: 'snow'
        });

        console.log(document.querySelector('#Content').value);

        // Set the content of the Quill editor after initialization
        quill.root.innerHTML = document.querySelector('#Content').value;

        // Listen for form submission
        document.querySelector('form').onsubmit = function () {
            // Set the value of the hidden input field to the HTML content of the Quill editor
            document.querySelector('#Content').value = quill.root.innerHTML;
        };
    </script>
}
