@using Helpers.ViewModels;
@model Helpers.ViewModels.SignInVM;
@{
    var loginPage_error = TempData["loginPage_error"] as string;
    var success_message = TempData["success_message"] as string;
}

<div class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
        <!---if both fields are blank, this alert will popup-->
        @if (!string.IsNullOrEmpty(loginPage_error))
        {
            <p class="error ml-4 text-danger ps-4">@(Html.Raw(loginPage_error))</p>
        }
        @if (!string.IsNullOrEmpty(success_message))
        {
            <p class=" ml-4 text-success ps-4">@(Html.Raw(success_message))</p>
        }
        <form action="" method="post" class="signInForm">
            <img class="mb-4" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72"
                height="57">
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating my-2">
                <input type="text" class="form-control" id="floatingInput" placeholder="Username"
                    asp-for="@Model.Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating my-2">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                    onselectstart="return false" onpaste="return false;" onCopy="return false" onCut="return false"
                    onDrag="return false" onDrop="return false" autocomplete=off type="password" class="form-control"
                    id="passeord" asp-for="@Model.Password">
                <label for="floatingPassword">Password</label>
            </div>

            @* <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
            Remember me
            </label>
            </div> *@
            <button class="btn btn-primary w-100 py-2 my-2" type="submit" asp-area="Auth" asp-controller="Account"
                    asp-action="SignIn">
                Sign In
            </button>
        </form>
        <p>New here? <a href="/Auth/Account/SignUp">Sign Up</a></p>
        <p><a href="/">Back to Homepage</a></p>
    </main>
</div>