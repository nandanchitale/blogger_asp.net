@using Helpers.ViewModels;
@model Helpers.ViewModels.SignUpVM;
@{
    string success_message = TempData["success_message"] as string;
    string error_messgae = TempData["signuppage_error"] as string;
}

<div class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signup w-100 m-auto">
        @if (!string.IsNullOrEmpty(success_message))
        {
            <p class=" ml-4 text-success ps-4">@(Html.Raw(success_message))</p>
        }
        @if (!string.IsNullOrEmpty(error_messgae))
        {
            <p class="error ml-4 text-danger ps-4">@(Html.Raw(error_messgae))</p>
        }
        <form action="" method="post" class="signUpForm" id="signUpForm">
            <img class="mb-4" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72"
                height="57">

            <div class="form-floating my-2">
                <input type="text" class="form-control" id="firstname" placeholder="Username"
                       asp-for="@Model.FirstName" required>
                <span asp-validation-for="@Model.FirstName" id="firstNameError" class="text-danger"></span>
                <label for="firstname">First Name</label>
            </div>

            <div class="form-floating my-2">
                <input type="text" class="form-control" id="lastname" placeholder="Username"
                       asp-for="@Model.LastName" required>
                <span asp-validation-for="@Model.LastName" id="lastNameError" class="text-danger"></span>
                <label for="lastname">Last Name</label>
            </div>

            <div class="form-floating my-2">
                <input type="email" class="form-control" id="email" placeholder="Username"
                       asp-for="@Model.Email" required>
                <span asp-validation-for="@Model.Email" id="emailError" class="text-danger"></span>
                <label for="email">Email</label>
            </div>

            <div class="form-floating my-2">
                <input type="password" class="form-control" id="password" placeholder="Password"
                    onselectstart="return false" onpaste="return false;" onCopy="return false" onCut="return false"
                    onDrag="return false" onDrop="return false" autocomplete=off type="password" class="form-control"
                       id="passeord" asp-for="@Model.Password" required>
                <span asp-validation-for="@Model.Email" id="passwordError" class="text-danger"></span>
                <label for="password">Password</label>
            </div>

            @* <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
            Remember me
            </label>
            </div> *@
            <button class="btn btn-primary w-100 py-2 my-3" type="submit" asp-area="Auth" asp-controller="Account"
                    asp-action="SignUp">
                Sign Up
            </button>
        </form>
        <p>Already have an Account?<a href="/Auth/Account/SignUp">Sign In</a></p>
        <p><a href="/">Back to Homepage</a></p>
    </main>
</div>

@section Scripts {
    <script src="~/js/signup.js"></script>
}